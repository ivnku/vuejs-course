  .slider__main
    .slider__window
      .slider__current-item
        +image("content/1.jpg")
        ul.slider__preview-wrapper.tabs-phones-hidden
          li.slider__preview.desktop-hidden
            +image("content/3.jpg")
          li.slider__preview
            +image("content/2.jpg")
          li.slider__preview
            +image("content/5.jpg")

script(type="text/x-template")#skills-list
  div
    ul.skills-card__skills-list
      li.skills-category(v-for="category in skills" :key="category.title")
        skills-category(:category="category")
    svg(style="width:0; height:0; position: absolute;" aria-hidden="true")
      linearGradient(id="gradient" x1="0%" y1="0%" x2="100%" y2="0")
        stop(offset="0%" stop-color="#4a00ed")
        stop(offset="100%" stop-color="#9300e8")

script(type="text/x-template")#skills-category
  div
    h3.skills-category__name {{category.title}}
    ul.skills-category__list
      li.skill(v-for="skill in category.skills" :key="skill.id")
        skill(:skill="skill")
        
script(type="text/x-template")#skill
    .circle-chart
      svg(viewBox="0 0 200 200")
        circle(
          cx="100" 
          cy="100" 
          r="80" 
          fill="transparent" 
          stroke="#e9e9e9" 
          stroke-width="10px"
        )
        circle(
          ref="circle"
          cx="100" 
          cy="100" 
          r="80"
          fill="transparent"
          stroke="url(#gradient)"
          stroke-width="20px"
          stroke-dasharray="502.4"
        )
      .circle-chart__title {{skill.title}}
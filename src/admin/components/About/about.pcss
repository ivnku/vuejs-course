@import '../../../styles/mixins.pcss';

.about {
  @include tablets-650 {
    .about-content.container {
      width: 100%;
      margin: 0;
    }
  }
}

.about-header {
  display: flex;
  margin-bottom: 60px;

  .title {
    font-size: 21px;
    font-weight: 700;
    margin-right: 60px;
  }
  @include tablets-650 {
    flex-direction: column;
    align-items: flex-start;
    margin-bottom: 40px;
    .title {
      margin-bottom: 30px;
    }
    .add-btn.text {
      padding: 0;
    }
  }
}